<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/itemViewItemUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >
        <RelativeLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:id="@+id/recDeleteData"
            >
           <ImageView
               android:layout_width="wrap_content"
               android:layout_height="50dp"
               android:id="@+id/img_item_delete_nhahang"
               android:src="@drawable/delete1"
               android:layout_alignParentRight="true"
               android:layout_alignParentTop="true"
               />
            <ImageView
               android:src="@drawable/ic_baseline_add_24"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/imgAddMonAn"
                android:layout_below="@id/img_item_delete_nhahang"
                android:layout_alignParentRight="true"
                />
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/img_item_update_nhaHang"
                android:src="@drawable/updatedata"
                android:layout_below="@id/imgAddMonAn"
                />
            <TextView
                android:hint="Name"
                android:fontFamily="sans-serif-condensed-medium"
                android:textSize="24sp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/txtNameNhaHangUpdateAndDelete"
                android:layout_toLeftOf="@+id/img_item_delete_nhahang"
                android:layout_marginRight="5dp"
                android:textAlignment="center"
                android:gravity="center"
                />
            <TextView

                android:hint="add nha hang"
                android:layout_below="@+id/txtNameNhaHangUpdateAndDelete"
                android:fontFamily="sans-serif-condensed-medium"
                android:textSize="24sp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/txtIdNhaHAng_update_and_delete"
                android:layout_toLeftOf="@+id/img_item_delete_nhahang"
                android:layout_marginRight="5dp"
                android:textAlignment="center"
                android:gravity="center"
                />
            <TextView
                android:text="Update Nhà hàng"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="center"
                android:textAlignment="center"
                android:textSize="24sp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
              android:layout_below="@id/txtIdNhaHAng_update_and_delete"
                android:layout_toLeftOf="@+id/img_item_delete_nhahang"
                android:layout_marginRight="5dp"
                />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>