<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="20dp"
    android:id="@+id/txtTileAddUserName"
    android:layout_alignParentTop="true"
    android:fontFamily="sans-serif-condensed-medium"
    android:text="UserName"
    android:textSize="20sp"
    android:layout_margin="10dp"

    />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/edtAddUserName"
        android:layout_toRightOf="@+id/txtTileAddUserName"
        android:layout_margin="10dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:hint="username"


        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:id="@+id/txt1"
        android:layout_below="@+id/txtTileAddUserName"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="PassWord"
        android:textSize="20sp"
        android:layout_margin="10dp"

        />
    <EditText
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_below="@+id/txtTileAddUserName"
        android:id="@+id/edtAddPassword"
        android:layout_toRightOf="@+id/txtTileAddUserName"
        android:layout_margin="10dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:hint="Password"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:id="@+id/txt2"
        android:layout_below="@+id/txt1"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Name"
        android:textSize="20sp"
        android:layout_margin="10dp"

        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt1"
        android:id="@+id/edtAddName"
        android:layout_toRightOf="@+id/txtTileAddUserName"
        android:layout_margin="10dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:hint="Name"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:id="@+id/txt3"
        android:layout_below="@+id/txt2"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Dia Chi"
        android:textSize="20sp"
        android:layout_margin="10dp"

        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt2"
        android:id="@+id/edtAddDiaChi"
        android:layout_toRightOf="@+id/txtTileAddUserName"
        android:layout_margin="10dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:hint="Dia Chi"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:id="@+id/txt4"
        android:layout_below="@+id/txt3"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Mail"
        android:textSize="20sp"
        android:layout_margin="10dp"

        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt3"
        android:id="@+id/edtAddMail"
        android:layout_toRightOf="@+id/txtTileAddUserName"
        android:layout_margin="10dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:hint="Mail"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:id="@+id/txt5"
        android:layout_below="@+id/txt4"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Sdt"
        android:textSize="20sp"
        android:layout_margin="10dp"

        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt4"
        android:id="@+id/edtAddSdt"
        android:layout_toRightOf="@+id/txtTileAddUserName"
        android:layout_margin="10dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:hint="Sdt"

        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnCanCelDiaLogAddDataUser"
        android:layout_below="@+id/edtAddSdt"
        android:text="cancel"
        />
    <Button
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnAddDataUser"
        android:layout_below="@+id/edtAddSdt"
        android:text="Add data"
        />

</RelativeLayout>