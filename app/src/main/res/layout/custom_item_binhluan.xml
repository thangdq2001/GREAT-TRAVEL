<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="125dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:padding="5dp"
            >
            <ImageView
               android:src="@drawable/avatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imgAvatarPost"
                android:background="@drawable/boderavartar"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:textAlignment="center"
                android:gravity="center"
                android:fontFamily="sans-serif-condensed-medium"
                android:textSize="14sp"
                android:textColor="#DDDDDD"
                android:text="17/02/2020"
                android:layout_marginRight="10dp"
                android:id="@+id/txtThoiGianPost"
                />
            <TextView
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/txtNameNguoiPost"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_toRightOf="@+id/imgAvatarPost"
                android:layout_toLeftOf="@+id/txtThoiGianPost"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="áº¨n danh"

                />
            <TextView
                android:layout_marginTop="10dp"
                android:layout_below="@+id/txtNameNguoiPost"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtNoiDungPost"
                android:textSize="14sp"
                android:textColor="#CCCCCC"
                android:layout_toRightOf="@+id/imgAvatarPost"
                android:layout_toLeftOf="@+id/txtThoiGianPost"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="Mon ngon gia tot  "
                />
            <ImageView
                android:id="@+id/saofun"
                android:src="@drawable/sao_notfun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtThoiGianPost"
                android:layout_toRightOf="@+id/txtNoiDungPost"
                />
            <ImageView
                android:id="@+id/fun"
                android:src="@drawable/vui_thuong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtThoiGianPost"
                android:layout_toRightOf="@+id/saofun"
                />
            <ImageView
                android:id="@+id/like"
                android:src="@drawable/like_yeu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtThoiGianPost"
                android:layout_toRightOf="@+id/fun"
                />



        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>